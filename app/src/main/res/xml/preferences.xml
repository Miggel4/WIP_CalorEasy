<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_name"
        android:inputType="textCapWords"
        android:key="name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_name" />

    <wip.fhdw.caloreasy.Settings.NumberPickerPreference
        android:key="calories_picker"
        android:title="@string/pref_title_calories_picker"
        android:defaultValue="@string/pref_default_calories_picker" />

</PreferenceScreen>
